{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "security"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "react/jsx-uses-vars": [
            "error"
        ],
        "react/jsx-uses-react": [
            "error"
        ],
         "no-console": [
            "error",
            {
                "allow": [
                    "log"
                ]
            }
        ]
    }
}
