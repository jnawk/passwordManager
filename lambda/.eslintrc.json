{
    "env": {
        "es6": false,
        "node": true,
        "commonjs": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "security"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2015
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": [
            "error",
            {
                "allow": [
                    "log",
                    "warn",
                    "error"
                ]
            }
        ]
    }
}
